.qrcode-container
  height: 100%
  .main-layout
    height: 100%
    min-height: 400px
    max-width: 900px
    margin: 0 auto
    background: #ffffff
  .main-block
    display: inline-block
    .qr-view
      width: 120px
      height: 120px
      margin: 0px auto
      background-color: #FFF
      border: 1px solid
      > div
        padding: 8px
    .code-input
      display: inline-flex
    .buttons-view
      display: grid
      justify-content: center

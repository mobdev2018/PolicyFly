@import '../../../../../stylus/colors.styl'

.configuresms-container
  height: 100%
  .main-layout
    height: 100%
    min-height: 400px
    max-width: 900px
    margin: 0 auto
    background: #ffffff
  .main-block
    display: inline-block
    .item-view
      width: 90%
      max-width: 340px
      height: 60px
      margin-top: 42px !important
      margin: 0px auto
      background-color: #ffffff
      border: 2px solid $color-secondary
      border-radius: 5px
      display: flex
      flex-direction: row
      > p
        font-size: 16px
        display: flex
        align-items: center
      .line-view
        background-color: #000000
        width: 2px
      > input
        width: 100%
        margin-left: 32px
        font-size: 16px
        outline: none
    .buttons-view
      display: grid
      justify-content: center
.details-container
  height: 100%
  .main-layout
    width: 100%
    height 100%
    max-width: 900px
    min-height: 600px
    margin: 0 auto
    background: #ffffff
    .badge-view
      margin-top: 80px
      .avatar-view      
        border: 4px solid
        border-color: #9B9B9B !important
        .profile-image
          width: 62px
          height 62px
          border-radius: 50%    
      .badge__badge
        top: 48px
        right: 0px
        border: 1px solid
        border-color: #979797 !important
        > span 
          display: flex
        .icon
          font-size: 16px
    .input-group--text-field__prefix
      color: rgba(0,0,0,0.87) !important
    .disabled
      .input-group--text-field__prefix
        color: rgba(0,0,0,0.38) !important
  .footerbar-view
    width: 100%
    position: absolute
    left: 0px
    bottom: 0px
    .footer-content
      background-color: #ffffff

.cancellation-container
  display: inherit !important
  max-width: none !important
  height: 100%
  overflow: auto
  .main-layout
    max-width: 900px
    margin: 0 auto
  .card-view
    background-color: transparent !important
    width: 100%
    p
      margin-bottom: 0
      line-height: 1.4
    .title-view
      background-color: transparent !important
      border-bottom: 1px solid #CCCCCC
      padding: 0 !important
    .subtitle-view
      margin: 0
      padding-bottom: 10px
      border-bottom: 1px solid #CCCCCC
    .content-view
      background-color: #ffffff
      display: inherit 
      padding-top: 60px
      padding-bottom: 60px
      padding-left: 100px
      padding-right: 100px
      .row-view
        display: flex
        padding: 0px
        .title-text
          font-size: 14px
          color: #9B9B9B
          padding-right: 24px
          margin: 0px
        .content-text
          font-size: 16px
          margin-bottom: 0px
    .quote-view
      background-color: #ffffff
      display: inherit 
      padding-top: 60px
      padding-bottom: 12px
      padding-left: 48px
      padding-right: 48px
      .quote-title-view
        display: flex
        justify-content: space-between
        .limitsRequested-view
          width: 140px
      .row-view
        display: flex
        padding: 0px
        margin-left: 0px
        .title-text
          font-size: 12px
          color: #9B9B9B
          margin: 0px
          padding-top: 4px
        .content-text
          font-size: 16px
          margin-top: 6px
          margin-bottom: 0px
      .total-view
        border-top: 1px solid #979797
        margin-top: 24px
  .footerbar-view
    width: 100%
    position: absolute
    left: 0px
    bottom: 0px
		.footer-content
      background-color: #ffffff !important
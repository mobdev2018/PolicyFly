.application-review-container
  display: inherit !important
  max-width: none !important
  .main-view
    max-width: 900px
    margin: 0 auto
  .card-view
    background-color: transparent !important
    p
      margin-bottom: 0
      line-height: 1.4
    .title-view
      background-color: transparent !important
      border-bottom: 1px solid #CCCCCC
      padding: 0 !important
    .subtitle-view
      margin: 0
      padding-bottom: 10px
      border-bottom: 1px solid #CCCCCC
    .content-view
      background-color: #ffffff
      display: inherit 
      padding-top: 60px
      padding-bottom: 100px
      padding-left: 100px
      padding-right: 100px
      .row-view
        display: flex
        padding: 0px
        .title-text
          font-size: 14px
          color: #9B9B9B
          padding-right: 24px
          margin: 0px
        .content-text
          font-size: 16px
          margin-bottom: 0px
      .expansion-panel__container
        .expansion-panel__header
          height: 42px
        .expansion-panel__body
          border-top: 1px solid #eeeeee
      .card-content
        background-color: #fafafa
        padding-left: 28px
        padding-right: 28px
        padding-top: 32px
        padding-bottom: 32px
        .item-view
          font-size: 12px
          p
            margin-bottom: 0px
          .item-text
            color: #9B9B9B          
            width: 50%
      .grid-header
        height: 42px
        padding-left: 24px

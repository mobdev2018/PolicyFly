@import '~vuetify/src/stylus/settings/_theme.styl'

.repeatpassword-container
  color: #ffffff
  .password-view
    .next-button
      width: 220px
      height: 48px
      margin-top: 145px
      font-size: 16px
    .item-view
      width: 90%
      max-width: 340px
      height: 60px
      margin: 0px auto
      background-color: #182C4F
      border: 2px solid #4A90E2
      border-radius: 5px
      display: flex
      flex-direction: row
      > input
        width: 100%
        font-size: 32px
        outline: none
    

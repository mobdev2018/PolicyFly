.main-container
  display: flex
  flex-direction: column
  height: 100vh
  overflow: hidden
  .page-view
    flex: 1
    overflow: hidden

.application
  .popup-view
    width: 300px
    .menu-header-view
      background-color: #5B5B5B
      .menu-title-view
        background-color: #515151
        .list__tile
          .list__tile__content
            padding-left: 20px
            padding-right: 20px
            padding-top: 16px
            .list__tile__title
              height: auto !important
              font-size: 18px
              color: #ffffff
            .list__tile__sub-title
              height: auto !important
              margin-top: 4px
              margin-bottom: 16px
              font-size: 13px
              color: #ffffff
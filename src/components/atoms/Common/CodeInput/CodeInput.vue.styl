.input-view
	width: 50px
	height: 56px
	.white-number-text
		width: 100%
		height: 100%
		border: 2px solid
		border-radius: 5px
		text-align: center
		font-size: 40px
	.blue-number-text
		width: 100%
		height: 100%
		color: #ffffff
		background-color: #636e88
		border: 1px solid #636e88
		border-radius: 3px
		text-align: center
		font-size: 40px
input[type=number]::-webkit-inner-spin-button,
input[type=number]::-webkit-outer-spin-button
	margin: 0
	-webkit-appearance: none

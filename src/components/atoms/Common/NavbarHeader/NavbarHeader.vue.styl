@import '../../../../stylus/colors.styl'

.navbar-header
  background-color: $color-primary
  height: 122px
  .nav-header-containter
    max-width: 900px
    .nav-title
      padding-top: 32px
    .nav-header
      margin-top: -10px
      .tabs__bar
        height: 20px
        overflow: hidden
        >i
          display: none !important
        .tabs__wrapper
          margin-left: 0 !important
          overflow-x: initial
          margin: 0px !important
          .tabs__li
            color: #ABABAB !important
            .tabs__item
              padding-left: 0 !important
              padding-right: 0px
              opacity: 0.3
              color: #ABABAB              
              .actions-button
                height: 20px
                margin-right: -12px
                padding-right: 0 !important
          .active
            color: #FFFFFF !important
            .tabs__item
              opacity: 1
              color: #ffffff
          .actions-item
            > .tabs__item
              opacity: 1 !important

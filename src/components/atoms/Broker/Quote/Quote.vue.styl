.quote
  min-width: 360px
  padding-top: 55px
  border-top: 10px solid #CCC
  border-bottom: 10px solid #CCC
  border-radius: 0
  .quote-body
    p
      margin-bottom: 0
    .text-title
      font-weight: 500
      line-height: 24px
      color: rgba(0, 0, 0, .38)
    .fs-20
      font-size: 20px
    .fs-45
      font-size: 45px
    .fw-500
      font-weight: 500
    .fw-700
      font-weight: 700
    .mt-12
      margin-top: 12px
    .lh-18
      line-height: 18px
    .ls-m-7
      letter-spacing: -0.7px
    .quote-table
      height: 120px
    .btn-details
      text-transform: none
  .quote-footer
    padding: 30px 0px;
    background-color: #F2F2F2
    border-top: 1px solid #979797
    .btn-approve
      padding-left: 40px
      padding-right: 40px
      height: 60px
      background-color: #FFF !important
